{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES6",
		"target": "ES2021",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "public"],
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
