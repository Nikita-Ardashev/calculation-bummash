@import '../../../consts.styl';

.table {
    caption {
        fontR(16px, 600);
        padding-bottom: 16px;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        border: 1px solid rgb(160 160 160);

        tr {
            th {
                border: 1px solid rgb(160 160 160);
                fontR(14px);
                padding: 0 4px;
            }
        }

        thead {
        }

        tbody {
            tr {
                th {
                    &:first-child {
                        text-align: left;
                    }
                }
            }
        }
    }
}